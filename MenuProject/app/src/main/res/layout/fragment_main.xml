<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/btn_sms"
        android:onClick="btnsms"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_tele" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE"
        android:id="@+id/btn_tele"
        android:layout_below="@+id/btn_sms"
        android:layout_alignParentStart="true"
        android:onClick="btn_tele"
        android:layout_alignEnd="@+id/btn_web" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_web"
        android:layout_below="@+id/btn_tele"
        android:layout_alignParentStart="true"
        android:text="WEB"
        android:onClick="btn_web"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAP"
        android:id="@+id/btn_map"
        android:onClick="btn_map"
        android:layout_below="@+id/btn_web"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:id="@+id/btn_share"
        android:layout_below="@+id/btn_map"
        android:layout_alignParentStart="true"
        android:onClick="btn_share"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW ACTIVITY"
        android:id="@+id/btn_new"
        android:onClick="btn_new"
        android:layout_below="@+id/btn_share"
        android:layout_alignParentStart="true" />
</RelativeLayout>
